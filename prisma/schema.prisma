// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            String   @id @default(cuid())
  title         String
  description   String
  price         Int
  images        String   // JSON-строка с массивом URL картинок
  sku           String
  tags          String   // JSON-строка с массивом тегов (модели/категории)
  oem           String?
  compatibility String?
  condition     String?  // "Новая" | "Б/У"
  availability  String?  // "В наличии" | "На заказ"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Автомобили под разбор
model Car {
  id       String   @id @default(cuid())
  make     String   // Марка (Tesla)
  model    String   // Модель (Model 3, Model Y, Model S, Model X, Cybertruck)
  year     Int      // Год выпуска
  vin      String   // VIN код
  mileage  Int?     // Пробег, км
  images   String   // JSON-строка с массивом URL картинок
  status   String   @default("В наличии") // "В наличии" | "В пути (возможно бронирование)"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
